{
  "name": "mpi",
  "version": "1.0.0",
  "private": true,
  "description": "MPI - Managemen Produksi Terintegrasi",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "db:generate": "pnpm --filter @mpi/db generate",
    "db:push": "pnpm --filter @mpi/db push",
    "db:studio": "pnpm --filter @mpi/db studio"
  },
  "devDependencies": {
    "turbo": "^2.0.0",
    "typescript": "^5.3.0"
  },
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=18"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
